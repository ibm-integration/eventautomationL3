apiVersion: eventstreams.ibm.com/v1beta2
kind: KafkaTopic
metadata:
  name: products
  namespace: {{NAMESPACE}}
  labels:
    eventstreams.ibm.com/cluster: es-demo
spec:
  config:
    min.insync.replicas: '1'
    retention.bytes: '302428800'
  partitions: 3
  replicas: 3
  topicName: PRODUCTS
---
